<% if a.trackable %>
  <%= render partial: '/public_activity/task/task_template', locals: {text: "New task " + content_tag(:strong, a.trackable.name) + " was added to the project by", user: a.owner.full_name, date: time_ago_in_words(a.created_at.to_time)} %>
<% else %>
  <%= render partial: '/public_activity/task/task_template', locals: {text: "New task which since been removed was added to the project by", user: a.owner.full_name, date: time_ago_in_words(a.created_at.to_time)} %>
<% end %>

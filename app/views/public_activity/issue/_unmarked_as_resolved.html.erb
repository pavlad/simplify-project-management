<% if a.trackable %>
  <%= render partial: '/public_activity/issue/issue_template', locals: {text: 'Issue' + content_tag(:strong, a.trackable.name) + ' was unmarked as resolved by', user: a.owner.full_name, date: time_ago_in_words(a.created_at.to_time)} %>
<% else %>
  <%= render partial: '/public_activity/issue/issue_template', locals: {text: 'Issue which has since been removed was unmarked as resolved by', user: a.owner.full_name, date: time_ago_in_words(a.created_at.to_time)} %>
<% end %>

<div class="wrapper-main">
  <div class="box">
    <div class="project-info" style="padding: 20px;">

      <div class="basic-info">
        <h2>
          <%= @project.name %>
        </h2>
        <h3>
          <ul class="list-inline">
            <li><i class="fa fa-clock-o" aria-hidden="true"></i> 20 Days</li>
            <li><i class="fa fa-building" aria-hidden="true"></i> Microsoft Inc.</li>
            <li><i class="fa fa-tag" aria-hidden="true"></i> Corporate</li>
          </ul>
        </h3>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iste eius, facere voluptatum sequi et repellat omnis eum excepturi? Recusandae placeat aspernatur unde dolorum consequatur, labore possimus quod cupiditate modi, doloremque.</p>
      </div>

      <div class="project-owners">
        <h3>Project Leader</h3>
        <div class="ui list">
          <div class="item">
            <img class="ui avatar image" src="img/lukas.png">
            <div class="content">
              <a class="header"><%= @project.project_manager.email %></a>
              <div class="description">Co-founder</div>
            </div>
          </div>
        </div>
      </div>

      <!-- end of test -->
      <div class="project-members">
        <h3>Consultants</h3>
        <div class="ui list">
          <% @consultants.each do |c| %>
          <div class="item">
            <img class="ui avatar image" src="img/lukas.png">
            <div class="content">
              <a class="header"><%= c.email %></a>
              <div class="description">Co-founder</div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>


    <div class="total-progress text-center" style="padding: 15px 5px 15px 5px;">
      <div id="p1" class="mdl-progress mdl-js-progress graph"></div>
      <script>
        document.querySelector('#p1').addEventListener('mdl-componentupgraded', function() {
          this.MaterialProgress.setProgress(40);
        });
      </script>
    </div>
  </div>


  <div class="box short-info">
    <div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
      <div class="mdl-tabs__tab-bar" style="margin-bottom: 20px;">
        <a href="#project-panel" class="mdl-tabs__tab is-active">Activity</a>
        <a href="#tasks-panel" class="mdl-tabs__tab">Tasks</a>
        <a href="#deliverables-panel" class="mdl-tabs__tab">Deliverables</a>
        <a href="#files-panel" class="mdl-tabs__tab">Project files</a>
      </div>

      <div class="mdl-tabs__panel is-active" id="project-panel">
        <!-- begin activity code -->
        <div class="ui list">
          <div class="item">
            <img class="ui avatar image" src="img/lukas.png">
            <div class="content">
              <a class="header">Lukas Gutwinski</a>
              <div class="description">Has tagged the task <a><b>Marketing plan</b></a> as done just now.</div>
            </div>
          </div>
        </div>
      </div>
      <!-- end activity code -->
      <div class="mdl-tabs__panel" id="tasks-panel">
        <!-- tasks -->
        <div id='tasks'>
          <%= render 'tasks' %>
        </div>
        <!-- end tasks -->
        <!-- task form -->
        <div id="task-form">
          <%= simple_form_for([@project,@task], remote: true) do |task_f| %>
          <%= task_f.input :name %>
          <%= task_f.input :user_id, collection:@consultants, label_method: :email %>
          <%= task_f.button :submit %>
          <% end %>
        </div>

      </div>
      <div class="mdl-tabs__panel" id="deliverables-panel">
        <table class="ui celled striped table">
          <tbody>
            <% @project.deliverables.each do |deliverable| %>
            <tr>
              <td>
                <i class="file icon"></i> <%= deliverable.public_id %>
              </td>
              <td class="right aligned collapsing"><%= deliverable.created_at %></td>
              <td>
                <%= link_to "http://res.cloudinary.com/banana-cake/image/upload/#{deliverable.path}" do %>
                <i class="fa fa-download" aria-hidden="true"></i>
                <% end %>
                <%= link_to project_deliverable_path(@project, deliverable.id), method: :delete do %>
                <i class="fa fa-close" aria-hidden="true"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= simple_form_for(@project) do |project_f| %>
        <%= project_f.attachinary_file_field :deliverables, as: :attachinary, cloudinary: {use_filename: true, unique_filename: false } %>
        <%= project_f.button :submit %>
        <% end %>
      </div>
      <div class="mdl-tabs__panel" id="files-panel">
        <!-- begin list -->





        <!-- end table -->

        <table class="ui celled striped table">
          <tbody>

            <% @project.project_files.each do |project_file| %>
            <tr>
              <td>
                <i class="file icon"></i> <%= project_file.public_id %>
              </td>
              <td class="right aligned collapsing"><%= project_file.created_at %></td>
              <td>
                <%= link_to "http://res.cloudinary.com/banana-cake/image/upload/#{project_file.path}" do %>
                <i class="fa fa-download" aria-hidden="true"></i>
                <% end %>
                <%= link_to project_project_file_path(@project, project_file.id), method: :delete do %>
                <i class="fa fa-close" aria-hidden="true"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= simple_form_for(@project) do |project_f| %>
        <%= project_f.attachinary_file_field :project_files, as: :attachinary, cloudinary: {use_filename: true, unique_filename: false } %>
        <%= project_f.button :submit %>
        <% end %>
      </div>

    </div>
  </div>
</div>

<!-- end of content -->
<!-- begin scripts -->
<script   src="https://code.jquery.com/jquery-3.1.0.min.js"   integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s="   crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.min.js"></script>

<!-- end scripts -->
<!-- Modal -->
<script type="text/javascript">
  $( ".create-project" ).click(function() {
    $('.create-project-modal')
    .modal('show')
    ;
  });

  $('.project-leader-select')
  .dropdown({fullTextSearch: true})
  ;

</script>

